{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        ".github/workflows/*.yml"
      ],
      "matchDepTypes": [
        "action"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}