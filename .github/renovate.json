{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        ".github/workflows/*.yml"
      ],
      "matchDepTypes": [
        "action"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "*.rb"
      ],
      "datasourceTemplate": "github-release-attachments",
      "matchStrings": [
        "url \"https://github.com/(?<depName>.*?)/releases/download/(?<currentValue>.*?)/(?<currentValue>.*?).*\"\\n\\s*sha256 \"(?<currentDigest>.*)\""
      ]
    }
  ]
}